<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- HR SEGMENT CONFIG VIEWS -->

        <record id="hr_segment_config_action" model="ir.actions.act_window">
            <field name="name">HR SEGMENT CONFIG</field>
            <field name="res_model">hr.segment.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="hr_segment_config_form">
            <field name="name">hr_segment_config_form</field>
            <field name="model">hr.segment.config</field>
            <field name="arch" type="xml">
                <form name="HR SEGMENT CONFIG">
                    <group>
                        <field name="name"/>
                    </group>
                </form>           
            </field>
        </record>

        <record model="ir.ui.view" id="hr_segment_config_tree">
            <field name="name">"hr_segment_config_tree"</field>
            <field name="model">hr.segment.config</field>
            <field name="arch" type="xml">
                <tree name="HR SEGMENT CONFIG">
                    <field name='name'/>
                </tree>
            </field>
        </record>

        <menuitem id="hr_segment_config_menu" name="HR SEGMENT CONFIG" action="hr_segment_config_action" sequence="10"/>

    </data>
</openerp>
