<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <!-- HR EXTRA TIME REQUEST VIEWS -->

        <record id="hr_extra_time_request_action" model="ir.actions.act_window">
            <field name="name">Horas extra</field>
            <field name="res_model">hr.extra.time.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="hr_extra_time_request_form">
            <field name="name">hr_extra_time_request_form</field>
            <field name="model">hr.extra.time.request</field>
            <field name="arch" type="xml">
                <form name="Horas extra">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_extra_time_request_tree">
            <field name="name">hr_extra_time_request_tree</field>
            <field name="model">hr.extra.time.request</field>
            <field name="arch" type="xml">
                <tree name="Horas extra">
                    <field name='name'/>
                </tree>
            </field>
        </record>

        <!-- <menuitem id="hr_extra_time_request_menu" name="Horas extra" parent="hr_public_leaves_main_menu" action="hr_extra_time_request_action" sequence="50"/> -->

    </data>
