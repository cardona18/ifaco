<odoo>

<template id="job_footer_custom" inherit_id="website.footer_default" name="Footer Job Link">
    <xpath expr="//div[@id='info']/ul" position="inside">
    <li><a href="/jobs">Jobs</a></li>
    </xpath>
</template>

<template id="index" name="Jobs">
    <t t-call="website.layout">
        <div id="wrap">
            <div class="oe_structure">
                <section class="mb16">
                    <div class="container">
                            <div class="row">
                                <div class="col-md-12 text-center mb16" data-snippet-id="colmd">
                                    <h2>Nuestras ofertas de trabajo</h2>
                                    <h3 style="font-size: 22px;">Guadalajara, Mexico</h3>
                                </div>
                            </div>
                        </div>
                </section>
            </div>



		    <div class="container oe_website_jobs">
		        <div class="row">
		            <div class="hidden" id="jobs_grid_left"></div>

		            <div class="col-md-12" id="jobs_grid">
		                <div t-if="not jobs">
		                    <div class="text-center text-muted">
		                      <h4 class="css_editable_display">No job offer found</h4>
		                      <h4 class="css_editable_hidden">Por el momento no todas los puestos están ocupados </h4>
		                      <t groups="base.group_website_publisher">
		                        <t  groups="base.group_hr_manager">
		                          <img src="/website/static/src/img/content_here.png"/>
		                        </t>
		                      </t>
		                    </div>
		                    <style>
		                            header{
		                                display: none;
		                            }
		                            footer{
		                                display: none;
		                            }
		                    </style>
		                </div>
		                <ul class="media-list" t-if="jobs">
		                    <li t-foreach="units" t-as="unit_id" class="col-md-4 col-sm-6">
		                        <h2 style="font-size: 24px; margin-bottom: 9px;">
		                            <img t-att-src="'data:image/png;base64,%s' % unit_id.icon" class="icon_unit" style="width: 22px; padding-bottom: 5px;"/>
		                            <span t-esc="unit_id.department_id.get_unit_name_formated()" style="font-size: 24px; margin-bottom: 9px; border-bottom: 2px solid #a2abaf;"/>
		                        </h2>
		                            <div t-foreach="unit_id.get_unit()" t-as="job_id">
		                                <t t-if="job_id.website_published">
		                                <!-- <div class="col-md-4 col-sm-6"> -->
		                                    <h3 class="media-heading">
		                                        <li style="padding-left: 25px">
		                                            <a t-attf-href="/jobs/detail/#{ slug(job_id) }">
		                                                <span t-field="job_id.name" style="font-size: 16px;"/>
		                                            </a>
		                                        </li>
		                                        <!-- <small t-if="job_id.no_of_recruitment &gt; 1">
		                                            <t t-esc="job_id.no_of_recruitment"/> open positions
		                                        </small>   -->                          
		                                            <span t-if="not job_id.website_published" class="label label-danger">not published</span>
		                                        </h3>
		                                    </t>
		                                </div>
		                        </li>
		                        <style>
		                            .icon_unit:hover{
		                                transition:All 1s ease;
		                                -webkit-transition:All 0.5s ease;
		                                -moz-transition:All 0.5s ease;
		                                -o-transition:All 0.5s ease;
		                                transform: rotate(360deg) scale(1) skew(1deg) translate(0px);
		                                -webkit-transform: rotate(360deg) scale(1) skew(1deg) translate(0px);
		                                -moz-transform: rotate(360deg) scale(1) skew(1deg) translate(0px);
		                                -o-transform: rotate(360deg) scale(1) skew(1deg) translate(0px);
		                                -ms-transform: rotate(360deg) scale(1) skew(1deg) translate(0px);
		                            }
		                            header{
		                                display: none;
		                            }
		                            footer{
		                                display: none;
		                            }
		                        </style>

		                </ul>
		                </div>
        			</div>
    			</div>
        </div>

    </t>
</template>

<template id="detail" name="Job Detail">
    <t t-call="website.layout">
        <t t-set="additional_title">Nuestros trabajos</t>
        <div id="wrap" class="js_hr_recruitment">
            <div class="oe_structure"/>

            <section class="container mt8">
                <div class="row">
                  <div class="col-sm-5">
                      <ol class="breadcrumb mb0">
                          <li><a href="/jobs">Nuestros trabajos</a></li>
                          <li class="active"><span t-field="job.name"></span></li>
                      </ol>
                  </div><div class="col-sm-7">
                      <t t-call="website.publish_management">
                          <t t-set="object" t-value="job"/>
                          <t t-set="publish_edit" t-value="True"/>
                      </t>
                  </div>
                </div>
            </section>

            <div class="oe_structure" style="clear:both;">
                <h1 class="text-center" t-field="job.name"/>
                <h5 class="text-center text-muted">
                    <i class="fa fa-clock-o"/> <span t-field="job.write_date"/>
                </h5>
            </div>
            <div class="container">
                <div class="parallax_ima">
                </div>
                <style>
                    .parallax_ima {
                        /* The image used */
                        background-image: url(<t t-esc="'data:image/png;base64,%s' % job.publish_job_web.img_job"/>);

                        /* Set a specific height */
                        min-height: 300px; 

                        /* Create the parallax scrolling effect */
                        background-attachment: fixed;
                        background-position: center;
                        background-repeat: no-repeat;
                        background-size: cover;
                    }

                </style>
                <script>
                    var img_src = document.getElementById('job_img').src;
                </script>

                <div t-field="job.website_description"/>
                <div t-field="job.publish_job_web.equ_job"/>
                <br/>
                <div t-field="job.publish_job_web.experi_job"/>
                <br/>
                <div t-field="job.publish_job_web.fun_job"/>
                <br/>
                <div t-field="job.publish_job_web.Knowle_job"/>
            </div>

            <div class="oe_structure">
                <section data-snippet-id="cta" class="mt16 mb16">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 text-center mt16 mb16">
                                <a t-attf-href="/jobs/apply/#{ job.id }" class="btn btn-primary btn-lg">Aplicar</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <style>
            header{
                display: none !important;
            }
            footer{
                display: none !important;
            }
        </style>
    </t>
</template>

